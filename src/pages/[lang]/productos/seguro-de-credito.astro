---
import es from '../../../data/locales/products/es/seguro-de-credito';
import en from '../../../data/locales/products/en/seguro-de-credito';
import seguroCreditoImg from '../../../assets/img/products/seguro-credito.png';
import ProductLayout from '../../../layouts/ProductLayout.astro';
import Separator from '../../../components/atoms/Separator.astro';
import Title from '../../../components/atoms/Title.astro';
import RiskBanner from '../../../components/atoms/RiskBanner.astro';

export function getStaticPaths() {
  return [{ params: { lang: 'en' } }, { params: { lang: 'es' } }];
}
const { lang } = Astro.params;
const t = lang === 'en' ? en : es;
---

<ProductLayout
  title={es.title}
  description={t.short_description}
  name={t.title}
  image={seguroCreditoImg.src}
  color="#A7E3F0"
  executivesContact={t.executivesContact}
>
  <Separator size="md" />
  <p set:html={t.description} />
  <div class="py-12">
    <Title barPosition="center" class={'text-center'}>{t.risk.title}</Title>
    <p class="py-8" set:html={t.risk.description} />
    <RiskBanner />
  </div>
  <div>
    <Title barPosition="center" class={'text-center'}>{t.benefits.title}</Title>
    <div
      class="bg-white mt-5 max-w-2xl px-8 sm:px-12 py-8 mx-auto rounded-[30px]"
    >
      <ul class="list-disc ml-5 text-anc-text">
        {t.benefits.list.map((item) => <li>{item}</li>)}
      </ul>
    </div>
  </div>
</ProductLayout>
