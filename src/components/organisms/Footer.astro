---
import ColorBar from '../atoms/icons/SvgColorBar.astro';

import ancoraLogo from '../../assets/img/ancora-logo.png';
import mexicoFlag from '../../assets/svg/mexico-flag.svg';
import spainFlag from '../../assets/svg/spain-flag.svg';
import phoneSvg from '../../assets/svg/phone.svg';
import messageSvg from '../../assets/svg/message.svg';
import locationSvg from '../../assets/svg/location.svg';
import xSvg from '../../assets/svg/x.svg';
import linkeinSvg from '../../assets/svg/linkedin.svg';
import youtubeSvg from '../../assets/svg/youtube.svg';
import facebookSvg from '../../assets/svg/facebook.svg';
import SubscribeForm from '../molecules/SubscribeForm.vue';
import { languages } from '../../i18n/ui';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import routes from '../../../routes';
import LangFlags from '../molecules/LangFlags.astro';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const getCurrenPath = () => {
  return Astro.url.pathname.replace(`/${lang}`, '');
};
---

<section class="bg-anc-background-dark font-sans relative">
  <div class="max-w-[1280px] mx-auto py-14 pb-0 text-anc-accent-light">
    <div class="relative z-10">
      <img class="mx-auto" src={ancoraLogo.src} alt="" />
    </div>
    <div class="overflow-hidden pl-4 pb-4 max-w-max absolute top-0 right-0">
      <ColorBar color="red" class="absolute -top-[100px]" />
      <ColorBar color="red" />
      <ColorBar color="gray" class="absolute -right-[88px] -top-[5px]" />
    </div>
    <!-- grid-cols-[213px_217px_100px_160px_auto] -->
    <section
      class="flex flex-wrap justify-center gap-7 items-start mt-20 max-w-[1150px] px-4 mx-auto"
    >
      <article
        class="order-3 sm:order-1 [&>a]:flex [&>a]:items-center [&>a]:gap-3 grid gap-3 text-sm max-w-[240px]"
      >
        <h5 class="text-white flex items-center gap-3 font-sans">
          <img src={mexicoFlag.src} alt="" />
           ANCORA México
        </h5>
        <span class="flex items-center gap-3">
          <img src={phoneSvg.src} alt="" />
           +52 (55) 5523 1100
        </span>
        <a
          style="word-break: break-all;"
          class="text-anc-accent-light"
          href="mailto:contacto@ancora.com.mx"
        >
          <img src={messageSvg.src} alt="" />
           contacto@ancora.com.mx
        </a>
        <span class="flex items-start gap-3">
          <img src={locationSvg.src} alt="" />
           Cracovia 72 | Torre B | Oficina 113 | Col. San Ángel Del. Álvaro
          Obregón Ciudad de México, 01000
        </span>
      </article>

      <article
        class="order-4 sm:order-2 [&>a]:flex [&>a]:items-center [&>a]:gap-3 grid gap-3 text-sm max-w-[240px]"
      >
        <h5 class="text-white flex items-center gap-3 font-sans">
          <img src={spainFlag.src} alt="" />
           ANCORA España
        </h5>
        <span class="flex items-center gap-3">
          <img src={phoneSvg.src} alt="" />
           +52 (55) 5523 1100
        </span>
        <a
          style="word-break: break-all;"
          href="mailto:contacto@ancoraseguros.es"
        >
          <img src={messageSvg.src} alt="" />
           contacto@ancoraseguros.es
        </a>
        <span class="flex items-start gap-3">
          <img src={locationSvg.src} alt="" />
           Calle Lagasca 105, Primero Izquierda, 28006 Madrid.
        </span>
      </article>

      <article
        class="order-1 sm:order-3 grid gap-4 text-sm text-center sm:text-left"
      >
        <a class="hover:underline" href={`/${lang}${routes.inicio}`}
          >{t('footer.nav.home')}</a
        >
        <a
          class="hover:underline"
          href={`/${lang}${routes.nosotros.cultura_ancora.nuestra_historia}`}
          >{t('footer.nav.history')}</a
        >
        <a class="hover:underline" href={`/${lang}${routes.productos.todos}`}
          >{t('footer.nav.products')}</a
        >
        <a class="hover:underline" href={`/${lang}${routes.servicios.todos}`}
          >{t('footer.nav.services')}</a
        >
      </article>

      <article
        class="order-2 sm:order-4 grid gap-4 text-sm w-[160px] text-center sm:text-left"
      >
        <a class="hover:underline" href="/files/ANCORA-espanol.pdf" download
          >{t('footer.nav.brochure')}</a
        >
        <a
          class="hover:underline"
          href={`/${lang}${routes.preguntas_frecuentes}`}
          >{t('footer.nav.frequentQuestions')}</a
        >
        <a
          class="hover:underline"
          href={`/${lang}${routes.aviso_de_privacidad}`}
          >{t('footer.nav.privacyNotice')}</a
        >
        <a
          class="hover:underline"
          href={`/${lang}${routes.nosotros.trabaja_con_nosotros}`}
          >{t('footer.nav.workWithUs')}</a
        >
      </article>

      <article class="order-5 grid gap-2 text-xs">
        <SubscribeForm client:load />

        <span class="text-white">{t('footer.nav.followUs')}:</span>

        <div class="flex items-center gap-2">
          <a href="https://www.linkedin.com/company/ancorasegurosmx">
            <img src={linkeinSvg.src} alt="" />
          </a>

          <a href="https://twitter.com/Ancorasegurosmx">
            <img src={xSvg.src} alt="" />
          </a>

          <a href="https://www.facebook.com/Ancorasegurosmx/">
            <img src={facebookSvg.src} alt="" />
          </a>

          <a href="https://www.youtube.com/@ANCORASegurosyFianzas">
            <img src={youtubeSvg.src} alt="" />
          </a>
          <a
            href="https://www.instagram.com/ancorasegurosmx/"
            class="bg-white p-1 rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="1em"
              viewBox="0 0 448 512"
              ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
              <path
                d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"
              ></path></svg
            >
          </a>
        </div>
      </article>
    </section>
  </div>
  <footer class="text-center font-lg py-5 bg-anc-secondary mt-12">
    <span class="text-[#9DA0AE]">©Ancora - All Rights Reserved</span>
  </footer>
</section>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"
  integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"></script>
