---
interface Props {
  image: string;
  title: string;
}

const { image, title } = Astro.props;
---

<div
    style={`background-image: url(${image})`}
    class="web-banner min-h-[396px] bg-center bg-cover bg-no-repeat relative overflow-hidden"
>
  <div class="web-container mx-auto min-h-[396px] grid items-center">
    <h1 class="text-white title-1 pl-4">{title}</h1>
  </div>
</div>
