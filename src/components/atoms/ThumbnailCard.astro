---
interface Props {
  name: string;
  image: string;
  textPosition?: 'center' | 'left';
}

const { name, image, textPosition = 'center' } = Astro.props;
---

<div
  class="grid grid-cols-2 gap-3 w-[300px] max-w-full bg-white rounded-xl items-center p-2"
>
  <img
    class="rounded-full w-[138px] h-[138px] object-cover object-center -mt-12"
    src={image}
    alt="product image"
  />
  <span
    class:list={[
      {
        'text-left': textPosition === 'left',
        'text-center': textPosition === 'center',
      },
    ]}
    class="text-sm">{name}</span
  >
</div>
