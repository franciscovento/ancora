---
import Title from '../atoms/Title.astro';

interface Props {
  headline?: string;
  variant?: 'primary' | 'secondary';
  title: string;
  image: string;
}

const { headline, title, image, variant } = Astro.props;
---

<div class="bg-white p-9 rounded-[30px] grid sm:grid-cols-2 gap-8 sm:gap-0">
  <div class="flex flex-col gap-8">
    <Title class="text-3xl sm:text-4xl" headline={headline} variant={variant}>
      {title}
    </Title>
    <div>
      <slot />
    </div>
  </div>
  <img class="justify-self-center" src={image} alt="title" />
</div>
