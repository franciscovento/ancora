---
import Title from '../atoms/Title.astro';

interface Props {
  title: string;
  image: string;
}

const { image, title } = Astro.props;
---

<div
  class="flex flex-col gap-6 items-center sm:items-start sm:gap-12 sm:flex-row bg-white rounded-xl py-8 px-4"
>
  <img
    class="w-[165px] h-[165px] object-cover object-center -mt-16 -ml-8"
    src={image}
    alt="product image"
  />
  <div class="flex flex-col gap-5">
    <Title variant="secondary" class={'text-2xl'}>
      {title}
    </Title>
    <div>
      <slot />
    </div>
  </div>
</div>
